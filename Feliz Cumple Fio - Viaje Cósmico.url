                document.getElementById('invitation-response').innerHTML = `
                    <p style="margin-top: 20px; font-size: 1.3em; color: #F44336;">Bueno... cuando cambies de opiniÃ³n sabes dÃ³nde encontrarme ð</p>
                `;
